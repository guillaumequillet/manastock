{% extends "base.html.twig" %}
{% block title %}Liste des Catégories{% endblock %}
{% block body %}
  <h1>Liste des Catégories</h1>
  <table>
    <thead>
      <tr>
        <th>Id</th>
        <th>Nom</th>
        <th>Description</th>
      </tr>
    </thead>
    <tbody>
      {% for category in categories %}
        <tr>
          <td>{{ category.id }}</td>
          <td>{{ category.name }}</td>
          <td>{{ category.description }}</td>      
        </tr>
      {% endfor %}
    </tbody>
  </table>
  <p>
    Page: {{ page }}
  </p>
{% endblock %}