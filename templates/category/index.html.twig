{% extends "base.html.twig" %}
{% block title %}Liste des Catégories{% endblock %}
{% block body %}
  <h1>Liste des Catégories</h1>
  <div class="table-responsive">
    <table class="table table-striped">
      <caption>Liste des Catégories</caption>
      <thead class="thead-dark">
        <tr>
          <th scope="col">#</th>
          <th scope="col">Nom</th>
          <th scope="col">Description</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        {% for category in categories %}
          <tr>
            <th scope="row">{{ category.id }}</th>
            <td>{{ category.name }}</td>
            <td>{{ category.description }}</td>
            <td>
              <a href="index.php?controller=category&amp;action=edit&amp;id={{ category.id }}" class="btn btn-secondary">Modifier</a>
              <a href="index.php?controller=category&amp;action=delete&amp;id={{ category.id }}" class="btn btn-danger" onclick="return confirm('Etes-vous sûr(e) de vouloir supprimer cette catégorie ?');">Supprimer</a> 
            </td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
  <p>
    <a href="index.php?controller=category&amp;action=create" class="btn btn-primary">Créer une nouvelle Catégorie</a>
  </p>
  <p>
    Page: {{ page }}
  </p>
{% endblock %}