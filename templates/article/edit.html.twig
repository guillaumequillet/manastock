{% extends "base.html.twig" %}
{% block title %}Article {{ article.code }}{% endblock %}
{% block body %}
  <h1>Article {{ article.code }}</h1>
  <form method="post">
    <div class="form-group">
      <label for="code">Code</label>
      <input type="text" class="form-control" id="code" name="code" value="{{ article.code }}" required> 
    </div>
    <div class="form-group">
      <label for="description">Description</label>
      <input type="text" class="form-control" id="description" name="description" value="{{ article.description }}"> 
    </div>
    <div class="form-row">
      <div class="form-group form-check col-md-6">
        <input type="checkbox" class="form-check-input" id="batch" name="batch"{% if article.batch %} checked{% endif %}>
        <label class="form-check-label" for="exampleCheck1">Gestion du Lot</label>
      </div>
      <div class="form-group form-check col-md-6">
        <input type="checkbox" class="form-check-input" id="serial" name="serial"{% if article.serial %} checked{% endif %}>
        <label class="form-check-label" for="exampleCheck1">Gestion du numéro de série</label>
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-3">
        <label for="weight">Poids</label>
        <input type="number" min="0" class="form-control" id="weight" name="weight" value="{{ article.weight }}" required> 
      </div>
      <div class="form-group col-md-3">
        <label for="width">Largeur</label>
        <input type="number" min="0" class="form-control" id="width" name="width" value="{{ article.width }}"> 
      </div>
      <div class="form-group col-md-3">
        <label for="height">Hauteur</label>
        <input type="number" min="0" class="form-control" id="height" name="height" value="{{ article.height }}"> 
      </div>
      <div class="form-group col-md-3">
        <label for="length">Longueur</label>
        <input type="number" min="0" class="form-control" id="length" name="length" value="{{ article.length }}"> 
      </div>
    </div>
    <div class="form-group">
      <label for="barcode">Code à barres</label>
      <input type="text" class="form-control" id="barcode" name="barcode" value="{{ article.barcode }}"> 
    </div>
    <div class="form-group">
      <label for="image">Image</label>
      <input type="text" class="form-control" id="image" name="image" value="{{ article.image }}"> 
    </div>
    <div class="form-group">
      <label for="categories">Categories</label>
      <input type="text" class="form-control" id="categories" name="categories" value=""> 
    </div>
    <div class="form-group">
      <label for="owner">Stockeur</label>
      <input type="text" class="form-control" id="owner" name="owner" value="{{ article.owner.name }}" required> 
    </div>
    <button type="submit" class="btn btn-primary">Enregister</button>
  </form>
{% endblock %}